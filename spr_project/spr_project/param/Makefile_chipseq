# 
# .Rnw.R:
# 	R CMD Stangle $<
# 
# .Rnw.tex:
# 	R CMD Sweave $<
# 
# .tex.pdf:
# 	pdflatex $<
# 	bibtex $*
# 	pdflatex $<
# 	pdflatex $<
 
########################
## Clean-up directory ##
########################
clean:
	rm -fv $(MAIN).aux $(MAIN).log $(MAIN).bbl $(MAIN).blg $(MAIN).out $(MAIN).toc $(MAIN).tex
	rm -fv $(MAIN)-*.pdf $(MAIN)-*.png $(MAIN)-*.jpg $(MAIN)-*.html
	rm -fv *~ 
